<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.main.MainActivity">


    <ImageView
        android:id="@+id/img_background"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/people" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_second_user_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/avatar_man_one"
        app:civ_border_color="#F8D16F"
        app:civ_border_width="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_first_user_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/avatar_man_three"
        app:civ_border_color="#F8D16F"
        app:civ_border_width="10dp"
        app:layout_constraintEnd_toStartOf="@+id/img_third_user_image"
        app:layout_constraintStart_toEndOf="@+id/img_second_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_third_user_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/avatar_femail_one"
        app:civ_border_color="#F8D16F"
        app:civ_border_width="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_second_user_image_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/img_second_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_second_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_second_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_second_user_image" />

    <TextView
        android:id="@+id/tv_second_user_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_second_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_second_user_image_number"
        app:layout_constraintStart_toStartOf="@+id/img_second_user_image_number"
        app:layout_constraintTop_toBottomOf="@+id/img_second_user_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_first_user_image_number"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/img_first_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_first_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_first_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_first_user_image" />

    <TextView
        android:id="@+id/tv_first_user_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_first_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_first_user_image_number"
        app:layout_constraintStart_toStartOf="@+id/img_first_user_image_number"
        app:layout_constraintTop_toBottomOf="@+id/img_first_user_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_third_user_image_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/img_third_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_third_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_third_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_third_user_image" />

    <TextView
        android:id="@+id/tv_third_user_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_third_user_image"
        app:layout_constraintEnd_toEndOf="@+id/img_third_user_image_number"
        app:layout_constraintStart_toStartOf="@+id/img_third_user_image_number"
        app:layout_constraintTop_toBottomOf="@+id/img_third_user_image" />

    <TextView
        android:id="@+id/tv_second_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Ahmed"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_second_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_second_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_second_user_image_number" />

    <TextView
        android:id="@+id/tv_second_user_page_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="20 Pages"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_second_user_name"
        app:layout_constraintStart_toStartOf="@+id/tv_second_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_user_name" />

    <TextView
        android:id="@+id/tv_first_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Eslam"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/img_first_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_first_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_first_user_image_number" />

    <TextView
        android:id="@+id/tv_first_user_page_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="30 Pages"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_first_user_name"
        app:layout_constraintStart_toStartOf="@+id/tv_first_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_user_name" />

    <TextView
        android:id="@+id/tv_third_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Eslam"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_third_user_image"
        app:layout_constraintStart_toStartOf="@+id/img_third_user_image"
        app:layout_constraintTop_toBottomOf="@+id/img_third_user_image_number" />

    <TextView
        android:id="@+id/tv_third_user_page_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="15 Pages"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_third_user_name"
        app:layout_constraintStart_toStartOf="@+id/tv_third_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_third_user_name" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:elevation="25dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_user_page_number">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_list_of_users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/user_list_item" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>